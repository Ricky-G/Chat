<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="page"
             x:Class="Chat.Mobile.View.FruitPage">
    <Shell.TitleView>
        <AbsoluteLayout
            HorizontalOptions="FillAndExpand">
            <Label 
             AbsoluteLayout.LayoutFlags="PositionProportional"
             AbsoluteLayout.LayoutBounds="0.5, 0.5, 200, 50"
             HorizontalOptions="CenterAndExpand"
             HorizontalTextAlignment="Center"
             VerticalOptions="Center"
             Text="Fruit" 
             TextColor="White"/>
        </AbsoluteLayout>
    </Shell.TitleView>
    <StackLayout>
        <CollectionView 
                x:Name="collectionView"
                Margin="10,10,10,0"
                VerticalOptions="FillAndExpand"
                ItemsSource="{Binding Fruits}"
                SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"  Span="{Binding Columns}" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Image  
                                x:Name="fruit"
                            
                                HeightRequest="{Binding 
                                Source={x:Reference page},
                                Path=BindingContext.Size}"
                            
                                WidthRequest="{Binding 
                                Source={x:Reference page},
                                Path=BindingContext.Size}" 
                            
                                AutomationId="Fruit"
                                Source="{Binding Source}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button    
                Margin="10"
                AutomationId="Add"
                Text="Add"
                Command="{Binding AddCommand}"/>
        <Button 
                Margin="10,0,10,10"
                AutomationId="Remove"
                Text="Remove"
                Command="{Binding RemoveCommand}"/>
    </StackLayout>
</ContentPage>
