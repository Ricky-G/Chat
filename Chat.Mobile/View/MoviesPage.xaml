<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chat.Mobile.View.MoviesPage">
    <Shell.TitleView>
        <AbsoluteLayout
            HorizontalOptions="FillAndExpand">
            <Label 
             AbsoluteLayout.LayoutFlags="PositionProportional"
             AbsoluteLayout.LayoutBounds="0.5, 0.5, 200, 50"
             HorizontalOptions="CenterAndExpand"
             HorizontalTextAlignment="Center"
             VerticalOptions="Center"
             Text="Movies" 
             TextColor="White"/>
        </AbsoluteLayout>
    </Shell.TitleView>
    <StackLayout>
        <SearchBar 
            AutomationId="search"
            Margin="15,20,15,0"
            CancelButtonColor="{StaticResource Primary}"
            Placeholder="Search Movies.."       
            SearchCommand="{Binding SearchMoviesCommand}"
            Text="{Binding Search}" />
        <CollectionView 
            x:Name="collection"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always"
            Margin="2,0,2,0"
            SelectionMode="Single"
            SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference collection}}"
            SelectionChangedCommand="{Binding MovieSelectedCommand}"
            ItemsSource="{Binding Movies}"
            ItemsLayout="VerticalGrid, 2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout    
                        AutomationId="{Binding Title}"
                        Margin="4,0,4,0"
                        Padding="0,4,0,4">
                        <Image  
                            HeightRequest="200"
                            HorizontalOptions="FillAndExpand"
                            Aspect="AspectFill"
                            Source="{Binding Poster}"/>
                        <Label
                            FontSize="Medium"
                            Text="{Binding Title}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Slider
            Value="{Binding Page}"
            Maximum="5"
            DragCompletedCommand="{Binding SearchMoviesCommand}"
            HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>
